@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles Management";
}
<h2>
    <a asp-action="Create">
        Create Role
    </a>
</h2>

@section breadcrumb {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="link-primary" asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="breadcrumb-item">Roles Management</li>
        </ol>
    </nav>
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title table-title">
                        Role list
                    </h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.NormalizedName)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(Modelitem => item.Id)></td>
                                    <td>@Html.DisplayFor(Modelitem => item.Name)></td>
                                    <td>@Html.DisplayFor(Modelitem => item.NormalizedName)></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>
