@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles Management";
}

@section breadcrumb {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="link-primary" asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <i class="bi bi-house-door"></i> <span>Dashboard</span>
                </a>
            </li>
            <li class="breadcrumb-item">Roles Management</li>
        </ol>
    </nav>
}

<section class="section">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title table-title">
                        Role list
                    </h5>
                    <div class="itemContainer">
                        <div class="item">
                            <a class=" " asp-action="Create">
                                <i class="bx-fw bx bx-plus bx-xs bx-spin-hover"
                                   style="font-weight:bold"></i>Create Role
                            </a>
                        </div>
                        <div class="item">
                            <a class=" " asp-action="Excel">
                                <i class="ri-file-excel-line"></i>Excel
                            </a>
                        </div>
                    </div>
                    <table class="table table-hover">
                        <thead class="table-info">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.NormalizedName)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(Modelitem => item.Id)</td>
                                    <td>@Html.DisplayFor(Modelitem => item.Name)</td>
                                    <td>@Html.DisplayFor(Modelitem => item.NormalizedName)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>
