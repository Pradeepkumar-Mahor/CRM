@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "User List";
}

@section breadcrumb {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="link-primary" asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <i class="bi bi-house-door"></i> <span>Dashboard</span>
                </a>
            </li>
            <li class="breadcrumb-item">User List</li>
        </ol>
    </nav>
}

<section class="section">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title table-title">
                        User List
                    </h5>
                    <div class="itemContainer">
                        @* <div class="item">
                            <a class=" " asp-action="Create">
                                <i class="bx-fw bx bx-plus bx-xs bx-spin-hover"
                                   style="font-weight:bold"></i>Create Role
                            </a>
                        </div>
                        <div class="item">
                            <a class=" " asp-action="Excel">
                                <i class="ri-file-excel-line"></i>Excel
                            </a>
                        </div> *@
                    </div>
                    <table class="table table-hover table-bordered">
                        <thead class="table-info">
                            <tr>
                                <th>
                                    User
                                </th>
                                <th>
                                    Email
                                </th>
                                <th style="width:10%">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-sm">
                                                <a>
                                                    @item.UserName
                                                </a>

                                                <small style="display:none">
                                                    <br>
                                                    @item.Id
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@Html.DisplayFor(Modelitem => item.Email)</td>
                                     <td class="text-right">
                                        <div class="btn-group">
                                            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#"
                                               data-bs-toggle="dropdown" aria-expanded="false">
                                                <span class="d-none d-md-block dropdown-toggle ps-2">Action</span>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" style="">

                                                <li>
                                                    <a style='margin-right:16px' asp-controller="UserRoles"
                                                       asp-action="Index" asp-route-userId="@item.Id"
                                                       class="dropdown-item">
                                                        <i class="fas fa-wrench"></i> Manage Roles
                                                    </a>
                                                <li>
                                                    <hr class="dropdown-divider">
                                                </li>
                                            </ul><!-- End Profile Dropdown Items -->
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

